generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String 
  createdAt DateTime @default(now())

  visits Visit[]
}

model Student {
  studentNumber String @id
  name String 
  section String
  yearLevel Int

  visits Visit[]
}

model Visit {
  id String @id @default(uuid())
  studentId String
  staffId String 
  timeIn DateTime
  timeOut DateTime?

  student Student @relation(fields: [studentId], references: [studentNumber])
  staff User @relation(fields: [staffId], references: [id])

  @@index([studentId, timeOut])
}

